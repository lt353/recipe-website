<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- This will include the header, which contains the title and navigation bar. -->
    <%- include("header") -%>

    <main>
        <div class="recipe-container">
            <h2><%= recipe.title %></h2>
            <p><%= recipe.content %></p>

            <!-- Recipe Image -->
            <% if (recipe.image) { %>
                <div class="image-container">
                    <img src="/<%= recipe.image %>" alt="<%= recipe.title %>" class="recipe-image-large">
                </div>
            <% } %>

            <!-- Print Recipe Button -->
            <button class="print-button" onclick="window.print()">üñ®Ô∏è Print Recipe</button>
        
            <!-- Ingredients Section -->
            <% if (recipe.ingredients) { %>
                <h3>Ingredients</h3>
                <ul class="ingredient-list">
                    <!-- Loop through each ingredient object -->
                    <% recipe.ingredients.forEach(ingredient => { %>
                        <!-- Display the quantity, unit, and ingredient name all together -->
                        <li><%= ingredient.quantity %> <%= ingredient.unit %> <%= ingredient.ingredient %></li>
                    <% }); %>
                </ul>
            <% } %>
        
            <!-- Instructions Section -->
            <% if (recipe.instructions) { %>
                <h3>Instructions</h3>
                <ol class="instruction-list">
                    <% recipe.instructions.forEach((step, index) => { %>
                        <li><strong>Step <%= index + 1 %>:</strong> <%= step %></li>
                    <% }); %>
                </ol>
            <% } %>
        </div>    
        <!-- Back to Top link for easier navigation -->
        <a href="#top" class="back-to-top">Back to Top</a>    
    </main>

    <!-- This will include the footer, which contains the copyright information. -->
    <%- include("footer") -%>

</body>
</html>